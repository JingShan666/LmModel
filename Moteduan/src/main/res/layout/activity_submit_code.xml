<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bbc.com.moteduan_lib.home.SubmitCodeActivity">


    <TextView
        android:id="@+id/skip"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="跳过"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@drawable/bg_gray_circle"/>


    <TextView
        android:id="@+id/submit_code_text"
        android:textSize="16sp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入邀请码(非必填)"/>

    <EditText
        android:gravity="center"
        android:id="@+id/code"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/submit_code_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/code"
        android:id="@+id/code_confirm"
        android:layout_alignRight="@+id/code"
        android:layout_alignLeft="@+id/code"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_solid_radius90_mainred"
        android:text="完成"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/white"/>
</RelativeLayout>
