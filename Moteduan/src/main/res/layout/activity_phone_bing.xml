<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitegray"
    tools:context="bbc.com.moteduan_lib.home.PhoneBingActivity">

    <RelativeLayout
        android:id="@+id/topbanner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/black_theme">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/back" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="手机绑定"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout24"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/topbanner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/white">


        <EditText
            android:id="@+id/phonenumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="请输入你的手机号"
            android:inputType="numberDecimal"
            android:textColor="@color/black_theme"
            android:textColorHint="@color/whitegray"
            android:textSize="20sp" />
    </RelativeLayout>


    <TextView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/relativeLayout25"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/relativeLayout24"
        android:layout_centerHorizontal="true"
        android:background="@color/gray_light" />

    <RelativeLayout
        android:id="@+id/relativeLayout26"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/relativeLayout25"
        android:layout_centerHorizontal="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/securitycode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/biankuang_zhuce"
            android:padding="5dp"
            android:text="获取验证码"
            android:textColor="@color/pink"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/securitycode_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="100dp"
            android:background="@null"
            android:ems="10"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="@color/black_theme"
            android:textColorHint="@color/whitegray"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/binding_iv"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/relativeLayout26"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_solid_radius90_mainred"
        android:gravity="center"
        android:text="立即绑定"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>
