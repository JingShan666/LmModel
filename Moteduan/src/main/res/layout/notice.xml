<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitegray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scrollbars="none">

            <RadioGroup
                android:id="@+id/notice_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10">

                <RadioButton
                    android:id="@+id/textView18"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="全部"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/textView20"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView19"
                    android:layout_toRightOf="@+id/textView19"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="吃饭"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/textView23"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView20"
                    android:layout_toRightOf="@+id/textView20"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="咖啡"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/textView24"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView23"
                    android:layout_toRightOf="@+id/textView23"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="K歌"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/textView25"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView24"
                    android:layout_toRightOf="@+id/textView24"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="电影"

                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/textView26"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView25"
                    android:layout_toRightOf="@+id/textView25"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="运动健身"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/textView28"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView26"
                    android:layout_toRightOf="@+id/textView26"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="电竞"

                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/textView29"
                    android:layout_width="50dp"

                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView28"
                    android:layout_toRightOf="@+id/textView28"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="酒吧"

                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/tv30"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView29"
                    android:layout_toRightOf="@+id/textView29"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="台球"

                    android:textColor="@color/gray"
                    android:textSize="15sp" />


                <RadioButton
                    android:id="@+id/textView31"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/tv30"
                    android:layout_toRightOf="@+id/tv30"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="高尔夫"
                    android:textColor="@color/gray"
                    android:textSize="15sp"

                    />

                <RadioButton
                    android:id="@+id/textView32"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView31"
                    android:layout_toRightOf="@+id/textView31"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="商务饭局"
                    android:textColor="@color/gray"
                    android:textSize="15sp"

                    />

                <RadioButton
                    android:id="@+id/textView33"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView31"
                    android:layout_toRightOf="@+id/textView31"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="商务歌局"
                    android:textColor="@color/gray"
                    android:textSize="15sp"

                    />

                <RadioButton
                    android:id="@+id/textView34"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView31"
                    android:layout_toRightOf="@+id/textView31"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="商务助理"
                    android:textColor="@color/gray"
                    android:textSize="15sp"

                    />

            </RadioGroup>


        </HorizontalScrollView>
    </RelativeLayout>


    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/notice_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp" />


</RelativeLayout>
