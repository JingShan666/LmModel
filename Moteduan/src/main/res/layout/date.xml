<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitegray">

    <RelativeLayout
        android:id="@+id/date_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <RadioGroup

                android:id="@+id/notice_radiogroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:weightSum="6">

                <RadioButton
                    android:id="@+id/textView40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="全部"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/textView41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView19"
                    android:layout_toRightOf="@+id/textView19"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="走秀"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/textView42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView20"
                    android:layout_toRightOf="@+id/textView20"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="商务"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView23"
                    android:layout_toRightOf="@+id/textView23"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="车展"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView24"
                    android:layout_toRightOf="@+id/textView24"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="约拍"

                    android:textColor="@color/gray"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/textView45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/textView44"
                    android:layout_toRightOf="@+id/textView44"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="礼仪"
                    android:textColor="@color/gray"
                    android:textSize="15sp" />


            </RadioGroup>
        </RelativeLayout>

    </RelativeLayout>


    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/date_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp" />

</RelativeLayout>
