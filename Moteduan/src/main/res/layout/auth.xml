<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/black_theme"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:onClick="back"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:src="@drawable/back_select" />

        <TextView
            android:id="@+id/titleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="身份认证"
            android:textColor="@color/white2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/updateLoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:onClick="updateLoad"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:text="确认上传"
            android:textColor="@color/theme_red" />
    </RelativeLayout>

    <bbc.com.moteduan_lib.renzheng.SpringbacklinearScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="身份证正面照片"
                android:textColor="@color/black_theme"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/t11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="请用手机横向拍摄保证图片正常显示"
                android:textColor="@color/theme_red"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">


                <wei.toolkit.widget.RoundedImageView
                    android:id="@+id/front"
                    android:layout_width="220dp"
                    android:layout_height="160dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/round"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shenghuozhao" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_takepic"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/choseFront"
                    android:layout_width="90dp"
                    android:layout_height="28dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/shangchuanimg" />
            </RelativeLayout>


            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="身份证背面照片"
                android:textColor="@color/black_theme"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/t22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="请用手机横向拍摄保证图片正常显示"
                android:textColor="@color/theme_red"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <wei.toolkit.widget.RoundedImageView
                    android:id="@+id/behind"
                    android:layout_width="220dp"
                    android:layout_height="160dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/round"
                    android:scaleType="centerCrop"
                    android:src="@drawable/yishuzhao" />

                <ImageView

                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_takepic"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/choseBehind"
                    android:layout_width="90dp"
                    android:layout_height="28dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/shangchuanimg" />
            </RelativeLayout>


            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="手持身份证正面照片"
                android:textColor="@color/black_theme"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/t33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="请用手机横向拍摄保证图片正常显示"
                android:textColor="@color/theme_red"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <wei.toolkit.widget.RoundedImageView
                    android:id="@+id/hand_front"
                    android:layout_width="220dp"
                    android:layout_height="160dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/round"
                    android:scaleType="centerCrop"
                    android:src="@drawable/moka" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/img_takepic"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/choseHand_front"
                    android:layout_width="90dp"
                    android:layout_height="28dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/shangchuanimg" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/modulAuthLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="形象照"
                    android:textColor="@color/white2"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="在完成视频认证同时,需要上传不少于7张的形象照片(写真照)"
                    android:textColor="@color/theme_red"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/thirty_transparent_black"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <GridView
                        android:id="@+id/picGridView"
                        android:layout_width="match_parent"
                        android:layout_height="164dp"
                        android:background="@color/black_theme"
                        android:numColumns="4"
                        android:scrollbars="none"
                        android:verticalSpacing="2dp">
                    </GridView>

                    <TextView
                        android:id="@+id/upload_front"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@color/theme_red"
                        android:padding="4dp"
                        android:text="上传照片"
                        android:textColor="@color/white2"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </bbc.com.moteduan_lib.renzheng.SpringbacklinearScrollView>


</LinearLayout>