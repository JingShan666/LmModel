<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context="bbc.com.moteduan_lib.ReleaseDate.DateRange">
    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/black_theme"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back"
            android:onClick="back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:src="@drawable/back_select"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="约会范围"
            android:textColor="@color/white2"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/range_confirm"
            android:paddingRight="10dp"
            android:background="@color/black_theme"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="确定"
            android:textColor="@color/white2"
            android:textSize="14sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/bg_text"
        android:paddingLeft="20dp"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textColor="@color/release_textcolor"
        android:text="请选择你想去的约会范围（不多于三个）"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/theme_white"
        android:layout_below="@+id/titleLayout"/>
    <GridView
        android:visibility="gone"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/theme_white"
        android:id="@+id/range_gv"
        android:layout_below="@+id/titleLayout"
        android:layout_width="match_parent"
        android:numColumns="3"
        android:layout_height="60dp"/>

    <LinearLayout
        android:layout_marginTop="125dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ListView
            android:visibility="gone"
            android:background="@null"
            android:divider="#00000000"
            android:paddingLeft="10dp"
            android:id="@+id/range_lv"
            android:layout_width="140dp"
            android:layout_height="wrap_content"></ListView>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/range_flowlayout"
            zm:max_select="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </com.zhy.view.flowlayout.TagFlowLayout>
    </LinearLayout>

</RelativeLayout>
