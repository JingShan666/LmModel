<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <wei.toolkit.widget.CircleImageBorderView
            android:id="@+id/lm_item_moments_msg_list_portrait"
            android:layout_width="@dimen/lm_portrait_size"
            android:layout_height="@dimen/lm_portrait_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/lm_item_moments_msg_list_img"
            android:layout_toRightOf="@+id/lm_item_moments_msg_list_portrait"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lm_item_moments_msg_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="非梦"
                android:textColor="@color/lm_9755D7"
                android:textSize="@dimen/lm_text_small_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/lm_item_moments_msg_list_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="酷！！！"
                    android:textColor="@color/lm_font"
                    android:textSize="@dimen/lm_text_normal_size" />

                <ImageView
                    android:id="@+id/lm_item_moments_msg_list_content_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:id="@+id/lm_item_moments_msg_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="5:11"
                android:textColor="@color/lm_font_grey"
                android:textSize="@dimen/lm_text_small_size2" />

        </LinearLayout>

        <ImageView
            android:id="@+id/lm_item_moments_msg_list_img"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lm_item_moments_msg_list_moment_content"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="4"
            android:text=""
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lm_decoration_line" />

</LinearLayout>